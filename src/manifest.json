{
  "manifest_version": 2,
  "name": "Responsive Github",
  "version": "1.0.2",
  "description": "Make github.com for Desktop more responsive, so you can split your screen.",
  "icons": {
    "16": "16.png",
     "48": "48.png",
     "128": "128.png"
  },
  "author": "@juliomatcom",
  "content_scripts": [
    {
      "matches": ["https://github.com/*"],
      "js": ["main.js"]
    }
  ],
  "homepage_url": "https://github.com/juliomatcom/responsive-github-extension",
  "permissions": [
    "activeTab",
    "https://github.com/*"
  ]
}
